#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/ALGGroup/Downloads/zmk-workspace" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/ALGGroup/Downloads/zmk-workspace")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/ALGGroup/Downloads/zmk-workspace" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/ALGGroup/Downloads/zmk-workspace/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/ALGGroup/Downloads/zmk-workspace/.envrc" "/Users/ALGGroup/Downloads/zmk-workspace/.direnv"/*.rc
